@{
    ViewData["Title"] = "Home Page";
}
@model Product
<div class="head">
    <a asp-action="Index">
        <h1>Products</h1>
    </a>
    <h1>|</h1> <a asp-action="Categories">
        <h1>Categories</h1>
    </a>
</div>
<div class="content">
    <div class="left p-4 mr-3">
        <h1>New Product</h1>
        <form asp-action="AddProduct">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description" cols="30" rows="5"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input  class="form-control" asp-for="Price">
                <span asp-validation-for="Price"></span>
            </div>
                <button class="btn btn-primary">Create</button>
        </form>
        </div>
    <div class="right border-left border-dark p-4">
        <h1>Existing Products</h1>
        @{
            foreach (var product in ViewBag.products)
            {
                <a class="block" asp-action="Details" asp-route-productId="@product.ProductId">@product.Name</a>
            }
        }
    </div>
</div>