@model Association
<div class="right">
        <p>Add Category:</p>
        <form asp-action="RelateProduct" asp-route-categoryId="@Model.CatagoryId">
            <div class="form-group">
                <select asp-for="ProductId">
                    @{
                        foreach (var category in ViewBag.ProductCategories)
                        {
                            <option value="@category.ProductId">@category.Name</option>
                        }
                    }
                </select>
            </div>
            <button class="btn btn-primary">Add</button>
        </form>
    </div>